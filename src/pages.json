{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/Index",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/category/Index"
    },
    {
      "path": "pages/cart/Index"
    },
    {
      "path": "pages/mine/Index"
    }
  ],
  "subPackages": [
    {
      "root": "pages/goods",
      "pages": [
        {
          "path": "detail/Index"
        },
        {
          "path": "list/Index"
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationStyle": "custom",
    "enablePullDownRefresh": true
  },
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#5E94FF",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/Index",
        "iconPath": "static/images/tabbars/home.png",
        "selectedIconPath": "static/images/tabbars/home_active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/category/Index",
        "iconPath": "static/images/tabbars/grid.png",
        "selectedIconPath": "static/images/tabbars/grid_active.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/cart/Index",
        "iconPath": "static/images/tabbars/cart.png",
        "selectedIconPath": "static/images/tabbars/cart_active.png",
        "text": "购物车"
      },
      {
        "pagePath": "pages/mine/Index",
        "iconPath": "static/images/tabbars/user.png",
        "selectedIconPath": "static/images/tabbars/user_active.png",
        "text": "个人中心"
      }
    ]
  }
}
